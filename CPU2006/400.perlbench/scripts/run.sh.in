#!/usr/bin/env bash

# initialize configuration vars

CONFIG_TYPE=""
RUN_KEY=""

BMK_BIN_NAME="@BMK_BIN_NAME@"
BMK_DATA_DIR="@BMK_DATA_DIR@"
BMK_BIN_PREAMBLE=@BMK_BIN_PREAMBLE@


# set configuration vars

if [ -z ${1:+x} ]; then 
  echo "error: config type was not provided" 

  exit 1
fi

CONFIG_TYPE=${1}

if [ -z ${2:+x} ]; then 
  echo "error: run key was not provided" 

  exit 1
fi

RUN_KEY=${2}

#

mkdir -p ${RUN_KEY}

cp -rf ./${BMK_BIN_NAME} ${RUN_KEY}
cp -rf ./${BMK_DATA_DIR}/all/input/* ${RUN_KEY}
cp -rf ./${BMK_DATA_DIR}/${CONFIG_TYPE}/input/* ${RUN_KEY}

pushd ${RUN_KEY}

if [ ${CONFIG_TYPE} == "test" ]; then
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} -I. -I./lib attrs.pl > ${RUN_KEY}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} -I. -I./lib gv.pl >> ${RUN}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} -I. -I./lib makerand.pl >> ${RUN}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} -I. -I./lib pack.pl >> ${RUN}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} -I. -I./lib redef.pl >> ${RUN}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} -I. -I./lib ref.pl >> ${RUN}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} -I. -I./lib regmesg.pl >> ${RUN}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} -I. -I./lib test.pl >> ${RUN}.out
elif [ ${CONFIG_TYPE} == "ref" ]; then
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} -I./lib checkspam.pl 2500 5 25 11 150 1 1 1 1 >> ${RUN}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} -I./lib diffmail.pl 4 800 10 17 19 300 >> ${RUN}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} -I./lib splitmail.pl 1600 12 26 16 4500 >> ${RUN}.out
else
  echo "unknown input set" > ${RUN_KEY}.out
  false
fi

RC=$?

popd


exit ${RC}

