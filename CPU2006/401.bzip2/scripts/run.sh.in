#!/usr/bin/env bash

# initialize configuration vars

CONFIG_TYPE=""
RUN_KEY=""

BMK_BIN_NAME="@BMK_BIN_NAME@"
BMK_DATA_DIR="@BMK_DATA_DIR@"
BMK_BIN_PREAMBLE=@BMK_BIN_PREAMBLE@

# set configuration vars

if [ -z ${1:+x} ]; then 
  echo "error: config type was not provided" 

  exit 1
fi

CONFIG_TYPE=${1}

if [ -z ${2:+x} ]; then 
  echo "error: run key was not provided" 

  exit 1
fi

RUN_KEY=${2}

#

mkdir -p ${RUN_KEY}

cp -rf ./${BMK_BIN_NAME} ${RUN_KEY}
cp -rf ./${BMK_DATA_DIR}/all/input/* ${RUN_KEY}
cp -rf ./${BMK_DATA_DIR}/${CONFIG_TYPE}/input/* ${RUN_KEY}

pushd ${RUN_KEY}

if [ ${CONFIG_TYPE} == "test" ]; then
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} input.program 5 > ${RUN_KEY}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} dryer.jpg 2 >> ${RUN_KEY}.out
else
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} input.source 280 > ${RUN_KEY}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} chicken.jpg 30 >> ${RUN_KEY}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} liberty.jpg 30 >> ${RUN_KEY}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} input.program 280 >> ${RUN_KEY}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} text.html 280 >> ${RUN_KEY}.out
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} input.combined 200 >> ${RUN_KEY}.out
fi

RC=$?

popd


exit ${RC}

