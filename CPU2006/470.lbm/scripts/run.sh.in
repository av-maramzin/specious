#!/usr/bin/env bash

# initialize configuration vars

CONFIG_TYPE=""
RUN_KEY=""

BMK_BIN_NAME="@BMK_BIN_NAME@"
BMK_DATA_DIR="@BMK_DATA_DIR@"
BMK_BIN_PREAMBLE=@BMK_BIN_PREAMBLE@


# set configuration vars

if [ -z ${1:+x} ]; then 
  echo "error: config type was not provided" 

  exit 1
fi

CONFIG_TYPE=${1}

if [ -z ${2:+x} ]; then 
  echo "error: run key was not provided" 

  exit 1
fi

RUN_KEY=${2}

#

mkdir -p ${RUN_KEY}

cp -rf ./${BMK_BIN_NAME} ${RUN_KEY}
cp -rf ./${BMK_DATA_DIR}/${CONFIG_TYPE}/input/* ${RUN_KEY}

pushd ${RUN_KEY}

if [ ${CONFIG_TYPE} == "test" ]; then
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} 20 reference.dat 0 1 100_100_130_cf_a.of > ${RUN_KEY}.out
else
  ${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} 3000 reference.dat 0 0 100_100_130_ldc.of > ${RUN_KEY}.out
fi

RC=$?

popd


exit ${RC}

